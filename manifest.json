{
  "manifest_version": 2,
  
  "name": "Death To AdBlock Haters",
  "version": "0.1.0",
  "description": "Retire les bloqueurs d'AdBlock sur cerains sites, permettant de lire leur contenu",

  "content_scripts": [{
    "js": ["src/main.js"],
    "matches": ["<all_urls>"],
    "run_at": "document_idle"
  }],

  "icons": {"128": "images/icon128.png"},

  "browser_action": {
    "default_icon": {
      "128": "images/icon128.png"
    },
    "default_title": "Death To AdBlock Haters"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "localStorage",
    "cookie",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "src/background.js",
      "src/common.js"
    ],
    "persistent": true
  }
}
